<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <!--将Object的实例化交给Spring管理-->
    <constant name="struts.objectFactory" value="spring"/>

    <!--设置依赖注入方式-->
    <constant name="struts.objectFactory.spring.autoWire" value="type"/>

    <!--自动加载xml文件中配置的action-->
    <constant name="struts.convention.classes.reload" value="true"/>


    


    <package name="UserAction" namespace="/user" extends="struts-default">
        <global-results>
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </global-results>
        <action name="login" class="com.yun11yun.action.LoginAction">
        </action>
    </package>
    
    <package name="ExerciseAciton" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor-stack name="appDefault">
                <interceptor-ref name="timer"/>
                <interceptor-ref name="logger"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="securityerror">/securityerror.jsp</result>
            <result name="error">/error.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

        
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="register" class="com.yun11yun.action.RegisterAction" method="execute">
            <result name="success">/thank.jsp</result>
            <result name="input">/register.jsp</result>
        </action>
    </package>
</struts>